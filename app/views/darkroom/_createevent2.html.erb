
<div id="createeventModal" class="myModalMain" tabindex="10" aria-hidden="true">
  <%= form_with model: @event, url: darkroom_index_path do |f| %>

  <div class="row">

    <div class="col-1 col-sm-1 col-md-1 col-lg-1 col-xl-1 p-0 text-center">
      <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="offset-9 col-2 offset-sm-9 col-sm-2 offset-md-9 col-md-2 offset-lg-9 col-lg-2 offset-xl-9 col-xl-2 p-0 text-center">
      <%= f.submit "登録", class: "btn btn-primary"%>
    </div>

  </div>

  <hr>

  <div class="container pl-5">
    <div class="row form-group">
      ユーザー：
      <span id="user-content" class="userContent">
      <%= f.collection_select :userid, User.all, :id, :name, id: "event-user", class: "form-control" %>
      </span>
    </div>

    <div class="row form-group">
      <div class="col-4 col-sm-4 eventContent">
        日付：
        <span id="date-content" class="font-bolder"></span>
        <%= f.date_field :date, id: "event-date", class: "form-control date-form" %>
      </div>
    </div>

    <div class="row form-group">
      <div  class="col-3 col-sm-3 eventContent">
        開始：
        <span id="starttime-content" class="font-bolder"></span>
        <%= f.time_field :start, id: "event-starttime", class: "form-control time-form" %>
      </div>

      <div class="col-3 col-sm-3 eventContent">
        終了：
        <span id="endtime-content" class="font-bolder"></span>
        <%= f.time_field :end, id: "event-endtime", class: "form-control time-form" %>
      </div>
    </div>
  </div>

  <% end %>

</div>
